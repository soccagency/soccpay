{
  "name": "@soccagency/soccpay",
  "version": "1.1.0",
  "description": "SoccPay JavaScript SDK for Node.js and Browser",
  "main": "dist/index.js",
  "module": "src/index.js",
  "browser": "dist/index.min.js",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "files": [
    "dist/",
    "src/",
    "README.md",
    "INSTRUCCIONES.md",
    "examples/"
  ],
  "scripts": {
    "build": "webpack --mode production",
    "dev": "webpack --mode development --watch",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepublishOnly": "npm run build",
    "publish:public": "npm config set registry https://registry.npmjs.org/ && npm config set access public && npm publish && npm config delete registry && npm config delete access",
    "publish:safe": "node -e \"console.log('Usar: ./publish.ps1 (Windows) o ./publish.sh (Linux/Mac)')\""
  },
  "keywords": [
    "soccpay",
    "payment",
    "gateway",
    "sdk",
    "javascript",
    "nodejs"
  ],
  "author": "SoccPay SDK",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0",
    "babel-loader": "^9.1.0",
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "@babel/plugin-proposal-class-properties": "^7.18.0",
    "@babel/plugin-transform-runtime": "^7.22.0",
    "@babel/runtime": "^7.22.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/soccpay.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/soccpay/issues"
  },
  "homepage": "https://github.com/your-username/soccpay#readme"
}
